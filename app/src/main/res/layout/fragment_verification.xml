<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".modules.signUpModule.VerificationFragment">


    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:id="@+id/scrollViewLogin"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:text="@string/txt_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="@dimen/txt_size_heading"
                    android:textColor="@color/txt_color_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="104dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/source_sanspro_bold"/>
            <TextView
                    android:text="@string/we_have_sent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textSize="@dimen/btn_txt_size_14dp"
                    android:textColor="@color/txt_color_heading"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"/>


            <com.poovam.pinedittextfield.LinePinField
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    app:highlightType="noFields"
                    app:noOfFields="4"
                    app:fieldColor="@color/txt_input_line_color"
                    app:distanceInBetween="15dp"
                    app:lineThickness="1dp"
                    app:isCustomBackground="false"
                    app:isCursorEnabled="true"
                    android:id="@+id/lineField"
                    android:layout_marginStart="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:text="@string/txt_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRegister"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/btn_txt_size_14dp"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/bg_btn_login"
                    android:fontFamily="@font/source_sanspro_bold"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/lineField"/>
            <TextView
                    android:text="@string/txt_did_not_receive_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDidNotReceivePin"
                    android:textColor="@color/txt_color_heading"
                    android:textSize="@dimen/txt_forgot_password_size_12dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegister"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="40dp"/>

            <ImageView
                    android:src="@drawable/bottom_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivBottomView"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>